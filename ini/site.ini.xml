<?xml version="1.0" standalone="yes"  ?>

<config>
	<site>
		<default_encoding>UTF-8</default_encoding>
		<title></title>
		<root_document>index.php</root_document>

		<keywords></keywords>

		<locales>
			<locale value="de" default="1"/>
			<locale value="en"/>
		</locales>

		<use_nice_uris>1</use_nice_uris>
		<default_mail_sender></default_mail_sender>
	</site>

	<db>
		<db_connection context="local">
			<type>mysql</type>
			<host>localhost</host>
			<user></user>
			<pass></pass>
			<name></name>
			<logtype>xml</logtype>
		</db_connection>

		<db_connection context="remote">
			<type>mysql</type>
			<host>localhost</host>
			<user></user>
			<pass></pass>
			<name></name>
			<logtype>xml</logtype>
		</db_connection>
	</db>

	<mail>
		<mailer class="smtpmailer">
			<host></host>
			<port></port>
			<user></user>
			<pass></pass>
			<auth_type>login</auth_type>
		</mailer>
	</mail>

	<paths>
		<path id="mysql_log_path" subdir="log"/>
		<path id="css_path" subdir="css"/>
		<path id="js_path" subdir="js"/>
		<path id="tpl_path" subdir="tpl"/>
		<path id="formtemplates_path" subdir="tpl/forms"/>
		<path id="img_site_path" subdir="img/site"/>
		<path id="locale_path" subdir="locales"/>
		<path id="files_path" subdir="files" />
		<path id="files_articles_path" subdir="files/articles" />
	</paths>

	<pages>
		<page id="default" class="default_page" />
	</pages>

	<pages script="admin.php" default_redirect="login">
		<page id="login" class="admin_login_page" />
		<page id="logout" class="admin_login_page"/>
		<page id="profile" class="admin_profile_page" auth="observe_row" />
		<page id="articles" class="admin_articles_page" auth="superadmin" />
		<page id="files" class="admin_files_page" auth="superadmin" />
		<page id="pages" class="admin_pages_page" auth="superadmin" />
	</pages>

	<pages script="embedded.php">
		<page id="files" class="admin_files_page" auth="superadmin" />
	</pages>

	<menus>
		<menu id="admin" script="admin.php" auth="superadmin">
			<menuentry page="profile" text="Profil"/>
			<menuentry page="articles" text="Artikel"/>
			<menuentry page="files" text="Dateien" />
			<menuentry page="pages" text="Seiten"/>
		</menu>
	</menus>

</config>
